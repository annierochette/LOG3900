<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeSoloMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <!--<fragment
            android:name="com.example.polydraw.Chat"
            android:id="@+id/chatFragment"
            android:layout_width="420dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>-->

        <Button
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button"
            android:fontFamily="sans-serif-condensed"
            android:text="Retour"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/chatButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/chat_foreground"
            android:layout_toLeftOf="@id/logoutButton" />

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/disconnect_round"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Mode Solo"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#2364aa"
                android:textSize="36sp" />

            <Button
                android:id="@+id/playButton"
                android:layout_width="280dp"
                android:layout_height="85dp"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:fontFamily="sans-serif-condensed"
                android:text="Jouer"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/challengeButton"
                android:layout_width="280dp"
                android:layout_height="85dp"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:fontFamily="sans-serif-condensed"
                android:text="DÃ©fi"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>