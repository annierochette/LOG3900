<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayMenu"
    android:background="#3da5d9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.polydraw.PlayMenu"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="993dp"
            android:layout_height="785dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="981dp"
                android:layout_height="806dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Modes de jeu"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="#2364aa" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mêlée générale"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Solo"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="36dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Libre"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="36dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>