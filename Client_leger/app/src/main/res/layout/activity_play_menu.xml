<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3da5d9"
    tools:context=".PlayMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="#FF5722"
        android:orientation="vertical"
        tools:context="com.example.polydraw.PlayMenu">

        <LinearLayout
            android:layout_width="749dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <!--            android:layout_height="785dp"-->
            <LinearLayout
                android:layout_width="745dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Modes de jeu"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="#2364aa"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="281dp"
                    android:layout_height="102dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mêlée générale"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="284dp"
                    android:layout_height="95dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Solo"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="281dp"
                    android:layout_height="96dp"
                    android:layout_margin="20dp"
                    android:background="#ff7f11"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Libre"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>