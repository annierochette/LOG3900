<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="1023dp"
        android:layout_height="742dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:context="com.example.polydraw.MainActivity"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp">

        <com.example.polydraw.DrawingCanvas
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="684dp"
            android:background="#FFFFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/paint"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selected_button"
                android:text="Dessin"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/eraser"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Efface"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/colorButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Couleur"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/capButton"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Pointe"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="20"
                android:min="1"
                android:progress="5" />

            <TextView
                android:id="@+id/sbTextView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
