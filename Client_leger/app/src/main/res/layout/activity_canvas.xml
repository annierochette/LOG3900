<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:context="com.example.polydraw.MainActivity"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp">

        <com.example.polydraw.DrawingCanvas
        android:id="@+id/drawing"
        android:layout_width="610dp"
        android:layout_height="700dp"
        android:background="#FFFFFFFF"
        android:layout_alignParentTop="true"/>

        <!--<fragment
            android:id="@+id/chatFragment"
            android:name="com.example.polydraw.Chat"
            android:layout_width="420dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>-->

        <ImageButton
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/stat_sys_download"
            android:layout_marginLeft="550dp"/>
        <!--                android:layout_toLeftOf="@+id/chatFragment" quand ajout fragment sera ok, enlever marginLeft-->

        <LinearLayout
            android:layout_width="610dp"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/paint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selected_button"
                android:text="Dessin"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/eraser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Efface"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/colorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Couleur"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/capButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Pointe"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="20"
                android:min="1"
                android:progress="5" />

            <TextView
                android:id="@+id/sbTextView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
