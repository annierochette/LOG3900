<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">


    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.polydraw.MainActivity"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/chatButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="845dp"
                android:background="@drawable/chat_foreground"
                android:layout_gravity="end" />

        </Toolbar>

        <com.example.polydraw.DrawingCanvas
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#FFFFFFFF"
            android:layout_above="@+id/guessingToolbox"/>

        <!--<fragment
            android:name="com.example.polydraw.Chat"
            android:layout_width="420dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/guessingToolbox"
            android:weightSum="3">

            <TextView
                android:id="@+id/hints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Indices" />

            <EditText
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="text"
                android:hint="RÃ©ponse"/>

            <ImageButton
                android:id="@+id/sendAnswer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/send"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
