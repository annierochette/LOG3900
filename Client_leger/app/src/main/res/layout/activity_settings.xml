<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4cafe0"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkBlue">

            <Button
                android:id="@+id/backButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/back_button"
                android:fontFamily="sans-serif-condensed"
                android:text="Retour"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"/>

            <ImageView
                android:id="@+id/chatButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="780dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@android:drawable/sym_action_chat" />

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/disconnect_button"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/white"
                app:srcCompat="@android:drawable/ic_lock_power_off" />

        </Toolbar>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_above="@+id/switch4"
                        android:layout_marginBottom="72dp"
                        android:background="#00A21010"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="ParamÃ¨tres"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="#2364aa"
                        android:textSize="36sp" />

                    <Switch
                        android:id="@+id/switch4"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Personnage virtuel 2"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:layout_above="@+id/switch4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Personnage virtuel 1"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                    <Switch
                        android:id="@+id/switch3"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:layout_above="@+id/switch4"
                        android:layout_below="@+id/switch4"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="-137dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Personnage virtuel 3"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>