<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">


    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.polydraw.MainActivity"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/chatButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="845dp"
                android:background="@drawable/chat_foreground"
                android:layout_gravity="end" />

        </Toolbar>

        <TextView
            android:id="@+id/score"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Résultats"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textFontWeight="800"
            android:layout_below="@+id/toolbar"/>

        <TextView
            android:id="@+id/player1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Player 1"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/player1"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Player 2"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/player2"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Player 3"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/toggleButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="toggle"
            android:layout_below="@+id/player3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <!--<fragment
            android:id="@+id/chat"
            android:name="com.example.polydraw.Chat"
            android:layout_width="420dp"
            android:layout_height="640dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>-->

        <com.example.polydraw.DrawingCanvas
            android:id="@+id/drawing"
            android:layout_width="808dp"
            android:layout_height="625dp"
            android:layout_above="@+id/drawingToolbox"
            android:background="#FFFFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/guessingToolbox"
            android:weightSum="3"
            android:visibility="invisible">

            <TextView
                android:id="@+id/hints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Indices" />

            <EditText
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="text"
                android:hint="Réponse"/>

            <ImageButton
                android:id="@+id/sendAnswer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/send"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/drawingToolbox"
                android:layout_width="800dp"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/paint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_button"
                    android:text="Dessin"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="Efface"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/colorButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="Couleur"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/capButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="Pointe"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="20"
                    android:min="1"
                    android:progress="5" />

                <TextView
                    android:id="@+id/sbTextView"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
