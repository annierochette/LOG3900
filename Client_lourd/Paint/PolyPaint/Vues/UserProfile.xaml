<UserControl x:Class="PolyPaint.Vues.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
             xmlns:control="clr-namespace:PolyPaint.CustomControls"
             mc:Ignorable="d"
        Height="650" Width="900">
    <Grid Background="#4CAFE0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button x:Name="Back" Height="50" Grid.ColumnSpan="3" Content="Retour au menu principal" Background="#FFFF7F11" BorderThickness="2"  FontWeight="Bold" FontSize="20" FontFamily="Ink Free" Command="{Binding GoToGameMenu}" Margin="10,54,33,10" Click="Back_Click" Grid.Row="5" />
        <Button Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="10,10,110.2,99.2" Command="{Binding GoToUserProfile}">
            <StackPanel>
                <Image Source="/PolyPaint;component/Resources/woman_avatar.png"  />
            </StackPanel>
        </Button>
        <control:MessageBox Grid.Column="6"  Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4" Value="{Binding MessageList}" Loaded="MessageBox_Loaded"/>
    </Grid>
</UserControl>
