<UserControl x:Class="PolyPaint.Vues.GameMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
        mc:Ignorable="d"
        Height="650" Width="900" Background="#FFB3C646">
    <Grid Background="#FF3DA5D9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MainChat" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="4" Background="White"></TextBlock>
        <TextBox x:Name="MainChatBox" Grid.Column="6" Grid.ColumnSpan="2"  Width="160" Height="40" Grid.Row="5" Background="White" Margin="10.2,36,68.2,32.8" BorderThickness="1" BorderBrush="Black" />
        <Button x:Name="SendMessage" Grid.Column="7" Grid.Row="5" Height="40" Content="Ok"  Margin="63,36,0.2,36.4" FontWeight="Bold" FontSize="16" FontFamily="Ink Free" />
        <Rectangle Fill="#FFF4F4F5" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="10,10,110.2,99.2" />
        <Image x:Name="avatar" Grid.ColumnSpan="3" Grid.RowSpan="3" Source="/PolyPaint;component/Resources/woman_avatar.png" Margin="10,10,110.2,99.2"/>
        <StackPanel Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="3" >
            <Button Height="50" Width="180" Margin="20" Content="Jouer" Background="#FFFEC601" BorderThickness="2" FontWeight="Bold" FontSize="24" FontFamily="Ink Free" />
            <Button Height="50" Width="180" Margin="20" Content="Créer" Background="#FFA2B631" BorderThickness="2" FontWeight="Bold" FontSize="24" FontFamily="Ink Free" />
            <Button Height="50" Width="180" Margin="20" Content="Profil" Background="#FFFF7F11" BorderThickness="2"  FontWeight="Bold" FontSize="24" FontFamily="Ink Free" Command="{Binding GoToUserProfile}"/>
        </StackPanel>
    </Grid>
</UserControl>
